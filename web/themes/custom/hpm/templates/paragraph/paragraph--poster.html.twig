{#
/**
 * @file
 * Poster â€“ title section (2-column) with full-width image below.
 *
 * Fields: field_meta_label, field_headline, field_text, field_image,
 *         field_credits, field_theme.
 */
#}
<section{{ attributes.addClass('poster', 'content-section') }}
  {% if theme_css %}data-theme="{{ theme_css }}"{% endif %}>
  <div class="section-container grid grid-cols-12 gap-7
              sm:items-center">

    {# Section title: 2-column flex #}
    <div class="section-title flex flex-col gap-7 col-span-12
                sm:mb-7 sm:grid sm:grid-cols-2 sm:gap-7 sm:col-span-10 sm:col-start-2
                lg:mb-12
                xl:items-center">
      <div class="flex flex-col gap-3 sm:pr-20 js-element-group">
        {% if paragraph.field_meta_label.value %}
          <h2 class="info">{{ paragraph.field_meta_label.value }}</h2>
        {% endif %}
        {% if paragraph.field_headline.value %}
          <h3 class="h2 text-hpm-red">{{ paragraph.field_headline.value }}</h3>
        {% endif %}
      </div>
      {% if paragraph.field_text.value %}
        <div class="js-element-group" data-delay=".3">
          <p class="copy">
            {{ paragraph.field_text.value|raw }}
          </p>
        </div>
      {% endif %}
    </div>

    {# Full-width image #}
    {% if content.field_image|render|trim %}
      <div class="col-span-12">
        <div class="relative">
          <div class="image-container js-zoom-image" data-delay=".4">
            {{ content.field_image }}
          </div>
          {% if paragraph.field_credits.value %}
            <div class="credits absolute right-[-2px] bottom-0 rotate-90 origin-bottom-right sm:right-[-4px]">
              {{ paragraph.field_credits.value }}
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}

  </div>
</section>
