<section{{ attributes.addClass('content-section') }}
  {% if theme_css %}data-theme="{{ theme_css }}"{% endif %}>
  <div class="section-container">
    {# Section title #}
    <div class="section-title flex flex-col gap-5 mb-9 col-span-12
                sm:mb-12 sm:flex-row sm:items-center sm:justify-between
                md:flex-row md:gap-12
                lg:mb-16
                xl:items-center">
      <div class="flex flex-col gap-3">
        {% if paragraph.field_meta_label.value %}
          <h2 class="info">{{ paragraph.field_meta_label.value }}</h2>
          {% if paragraph.field_section_title.value %}
            <h3 class="h2 text-hpm-red">{{ paragraph.field_section_title.value }}</h3>
          {% endif %}
        {% elseif paragraph.field_section_title.value %}
          <h2 class="h2 text-hpm-red">{{ paragraph.field_section_title.value }}</h2>
        {% endif %}
      </div>
      {% if button_url %}
        <div class="section-title__button shrink-0">
          {% include '@hpm/templates/components/button-link.html.twig' with {
            url: button_url,
            text: button_text
          } only %}
        </div>
      {% endif %}
    </div>

    {# Block items grid #}
    <div class="grid grid-cols-12">
      <div class="col-span-12 grid grid-cols-1 gap-7 js-element-group
                  sm:col-span-10 sm:col-start-2
                  md:col-span-12 md:col-start-1 md:grid-cols-3">
        {% for item in paragraph.field_items %}
          {% set block_item = item.entity %}
          <div class="blocks-item flex flex-col items-start gap-2
                      sm:gap-3
                      lg:gap-4 lg:pr-8 xl:pr-20">
            {% if block_item.field_meta_label.value %}
              <p class="info text-hpm-red meta-line--small meta-line--red">
                {{ block_item.field_meta_label.value }}
              </p>
            {% endif %}
            <div>
              {% if block_item.field_headline.value %}
                <h3 class="h3-serif">{{ block_item.field_headline.value }}</h3>
              {% endif %}
              {% if block_item.field_text.value %}
                <div class="copy">{{ block_item.field_text.value|raw }}</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>