{% set theme = content.field_theme|render|striptags|trim %}
<div{{ attributes.addClass('content-section') }}
  {% if theme %}data-theme="{{ theme }}"{% endif %}>
  <div class="section-container">
    <div class="grid grid-cols-12 gap-x-7">
      <div class="col-span-12 lg:col-span-8 lg:col-start-3 text-center js-element-group">
        {% if content.field_headline|render|trim %}
          <h2 class="h2">{{ content.field_headline }}</h2>
        {% endif %}
        {% if content.field_text|render|trim %}
          <div class="formatted mt-4 lg:mt-6">
            {{ content.field_text }}
          </div>
        {% endif %}
        {% if content.field_link|render|trim %}
          <div class="button-container justify-center mt-6 lg:mt-8">
            {{ content.field_link }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
